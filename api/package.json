{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx watch --include '../shared/**/**' --exclude '../shared/**/node_modules' --clear-screen=false  src/app.ts",
    "build": "pnpm tsc --build",
    "start": "pnpm build && node --env-file=.env ./dist/src/app.js",
    "lint": "eslint --fix .",
    "format": "prettier --write --cache .",
    "lint-format": "pnpm lint && pnpm format",
    "check-types": "pnpm tsc --skipLibCheck --noEmit"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "@shared/zod-schemas": "workspace:*",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "ms": "^2.1.3",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.5",
    "eslint": "^9.21.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "@shared/eslint-prettier": "workspace:*"
  }
}
